---
interface Props {
  slug: string
  title: string
  image: string
}

let { slug, title, image } = Astro.props
if (!image.includes('.')) image = (await import(`../images/${image}.png`)).default.src
---

<div
  class="flex flex-col items-start rounded-lg xl:rounded-xl overflow-hidden bg-neutral-800 pb-10 h-full"
>
  <div
    class="w-full aspect-square max-h-72 xl:max-h-96 flex flex-col p-5 items-center bg-neutral-700 group"
  >
    <img src={image} alt="thumbnail" class="h-full group-hover:scale-105 transition-transform" />
  </div>
  <div class="ml-4 mt-2 z-10">
    <p class="text-gray-400 font-normal mb-0 mt-1">~/blog/latest:</p>
    <a href=`/blog/${slug}` class="text-4xl xl:text-5xl text-gray-300 font-bold mt-5">{title}</a>
  </div>
</div>
